{
  "name": "Echo360 Downloader",
  "description": "Download lectures from echo360 website for free.",
  "version": "3.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": ["scripting", "webRequest", "downloads"],
  "host_permissions": ["https://*.echo360.ca/*", "https://*.echo360.com/*"],
  "icons": {
    "32": "favicon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://content.echo360.ca https://content.echo360.com;"
  }
}
