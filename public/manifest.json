{
  "name": "Echo360 Downloader",
  "description": "The power of React and TypeScript for building interactive Chrome extensions",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "scripting",
    "webRequest",
    "declarativeNetRequest",
    "downloads"
  ],
  "host_permissions": [
    "https://*.echo360.ca/*",
    "http://*.echo360.ca/*",
    "https://*.echo360.org/*",
    "http://*.echo360.org/*"
  ],
  "icons": {
    "32": "favicon.png"
  }
}
