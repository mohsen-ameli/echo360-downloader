{
  "name": "Echo360 Downloader",
  "description": "Download lectures from echo360 website for free.",
  "version": "2.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": ["scripting", "webRequest", "downloads"],
  "host_permissions": ["https://*.echo360.ca/*", "http://*.echo360.ca/*"],
  "icons": {
    "32": "favicon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; default-src 'self'"
  }
}
